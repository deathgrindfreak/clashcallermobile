<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.deathgrindfreak.clashcallermobile.JoinWarActivity"
    android:gravity="center"
    android:background="@color/white" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Join War"
            android:id="@+id/joinWarText"
            android:textColor="@color/button_blue"
            android:textSize="25dp"
            android:phoneNumber="false"
            android:layout_margin="10dp"
            android:layout_marginBottom="15dp" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/warIdCodeField"
            android:inputType="text"
            android:hint="War ID Code"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joinSubmitButton"
            android:textColor="@color/button_blue"
            android:layout_margin="5dp"
            android:background="@color/button_blue"
            android:textSize="25dp"
            android:text="SUBMIT"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:onClick="joinSubmitButtonClicked" />
    </LinearLayout>
</RelativeLayout>
