<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.deathgrindfreak.clashcallermobile" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Clash Caller"
        android:logo="@drawable/title"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartWarActivity"
            android:label="@string/title_activity_start_war" >
        </activity>
        <activity
            android:name=".ShowWarActivity"
            android:label="@string/title_activity_show_war" >
        </activity>
        <activity
            android:name=".JoinWarActivity"
            android:label="@string/title_activity_join_war" >
        </activity>
    </application>

</manifest>
